{
  "default": true,
  "MD001": true,                 // heading-increment - Heading levels should only increment by one level at a time
  "MD002": false,                // first-heading-h1 - First heading should be a top-level heading (we sometimes use other levels)
  "MD003": {                     // heading-style
    "style": "atx"              // Use # style headings
  },
  "MD004": {                     // ul-style
    "style": "dash"             // Use - for unordered lists
  },
  "MD005": true,                 // list-indent - Inconsistent indentation for list items at the same level
  "MD007": {                     // ul-indent
    "indent": 2                 // Unordered list indentation
  },
  "MD009": {                     // no-trailing-spaces
    "br_spaces": 2,             // Spaces for line breaks
    "list_item_empty_lines": false,
    "strict": false
  },
  "MD010": true,                 // no-hard-tabs - Hard tabs
  "MD011": true,                 // no-reversed-links - Reversed link syntax
  "MD012": {                     // no-multiple-blanks
    "maximum": 2                // Maximum consecutive blank lines (increased to 2 to match usage)
  },
  "MD013": {                     // line-length
    "line_length": 120,         // Line length
    "code_blocks": false,       // Don't check code blocks
    "tables": false,            // Don't check tables
    "headings": false,         // Don't check headings
    "strict": false,           // Allow some flexibility
    "stern": false            // Don't be too strict
  },
  "MD014": false,                // commands-show-output - Dollar signs used before commands without showing output
  "MD018": true,                 // no-missing-space-atx - No space after hash on atx style heading
  "MD019": true,                 // no-multiple-space-atx - Multiple spaces after hash on atx style heading
  "MD020": true,                 // no-missing-space-closed-atx - No space inside hashes on closed atx style heading
  "MD021": true,                 // no-multiple-space-closed-atx - Multiple spaces inside hashes on closed atx style heading
  "MD022": {                     // blanks-around-headings
    "lines_above": 1,          // Number of blank lines above heading
    "lines_below": 1           // Number of blank lines below heading
  },
  "MD023": true,                 // heading-start-left - Headings must start at the beginning of the line
  "MD024": {                     // no-duplicate-heading
    "siblings_only": true,      // Only check sibling headings
    "allow_different_nesting": true  // Allow same title at different nesting
  },
  "MD025": {                     // single-title/single-h1
    "front_matter_title": "",   // RegExp for matching title in front matter
    "level": 1                 // Level that top-level headings should match
  },
  "MD026": {                     // no-trailing-punctuation
    "punctuation": ".,;:!。，；：！"  // Punctuation characters not allowed at end of headings
  },
  "MD027": true,                 // no-multiple-space-blockquote - Multiple spaces after blockquote symbol
  "MD028": false,                // no-blanks-blockquote - Blank line inside blockquote (we use this for separation)
  "MD029": {                     // ol-prefix
    "style": "one_or_ordered"   // List style (allow both 1. and ordered)
  },
  "MD030": {                     // list-marker-space - Spaces after list markers
    "ul_single": 1,
    "ol_single": 1,
    "ul_multi": 1,
    "ol_multi": 1
  },
  "MD031": true,                 // blanks-around-fences - Fenced code blocks should be surrounded by blank lines
  "MD032": true,                 // blanks-around-lists - Lists should be surrounded by blank lines
  "MD033": {                     // no-inline-html
    "allowed_elements": [       // Allow specific HTML elements
      "br",
      "details",
      "summary",
      "kbd",
      "sup",
      "sub"
    ]
  },
  "MD034": false,                // no-bare-urls - Allow bare URLs in some cases
  "MD035": {                     // hr-style
    "style": "---"             // Horizontal rule style
  },
  "MD036": false,                // no-emphasis-as-heading - Allow emphasis as headings (we use this in docs)
  "MD037": true,                 // no-space-in-emphasis - Spaces inside emphasis markers
  "MD038": true,                 // no-space-in-code - Spaces inside code span elements
  "MD039": true,                 // no-space-in-links - Spaces inside link text
  "MD040": true,                 // fenced-code-language - Fenced code blocks should have a language specified
  "MD041": false,                // first-line-heading - First line in a file should be a top-level heading
  "MD042": true,                 // no-empty-links - No empty links
  "MD043": false,                // required-headings - Required heading structure
  "MD044": {                     // proper-names
    "names": [                  // List of proper names to check
      "LlamaHome",
      "H2O",
      "TensorBoard",
      "PyTorch",
      "Hugging Face",
      "PEFT",
      "LoRA",

      "Python",
      "JavaScript",
      "TypeScript",
      "React",
      "Node.js",
      "FastAPI",
      "Django",

      "GitHub",
      "GitLab",
      "Docker",
      "Kubernetes",
      "VS Code",
      "PyCharm",
      "Jupyter",

      "CUDA",
      "GPU",
      "CPU",
      "YAML",
      "JSON",
      "REST",
      "API",
      "ML",
      "AI",
      "LLM",

      "Linux",
      "macOS",
      "Windows",
      "Ubuntu",
      "CentOS"
    ],
    "code_blocks": false       // Don't check code blocks
  },
  "MD045": true,                 // no-alt-text - Images should have alternate text
  "MD046": {                     // code-block-style
    "style": "fenced"          // Code block style
  },
  "MD047": true,                 // single-trailing-newline - Files should end with a single newline character
  "MD048": {                     // code-fence-style
    "style": "backtick"        // Code fence style
  },
  "MD049": {                     // emphasis-style
    "style": "asterisk"        // Changed to asterisk to match current usage
  },
  "MD050": {                     // strong-style
    "style": "asterisk"        // Changed to asterisk to match current usage
  }
} 