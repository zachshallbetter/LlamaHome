[flake8]
# Line length should match black's configuration
max-line-length = 150

# Ignore certain errors and warnings
extend-ignore = W291,W292,W293,E302,E303,E305,ANN101,ANN102,ANN204,ANN401,D100,D101,D102,D103,D104,D105,D107,N801,N802,N803,N806,C901

# Exclude certain directories and files
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.pyc,
    *.egg-info,
    .eggs,
    .tox,
    .venv,
    venv,
    .env,
    env,
    docs

# Per-file-ignores
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py: F401
    # Allow long lines in configuration files
    setup.py: E501
    tests/*: D100,D101,D102,D103

# Maximum complexity for functions
max-complexity = 15